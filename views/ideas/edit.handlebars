{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
    <h3>Edit Idea</h3>
    <form action="/ideas/{{idea.id}}/?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
        <div class="from-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" value="{{idea.title}}" required>
        </div>
        <div class="from-group mb-3">
            <label for="details">Details</label>
            <textarea type="text" class="form-control" name="details" required>{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-success btn-lg">Submit</button>
    </form>
</div>