{{#each ideas}}
<div class="card mb-4">
<div class="card-body">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block mb-3">Edit Idea</a>
    <form method="POST" action="/ideas/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
</div>
<div class="card-footer"> 
    <p><small>Posted at {{date}}</small></p>
</div>
</div>
{{else}}
<p>No Ideas to display</p>
{{/each}}